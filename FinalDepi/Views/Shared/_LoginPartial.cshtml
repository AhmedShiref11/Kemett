@using Microsoft.AspNetCore.Identity
@inject UserManager<FinalDepi.Models.ApplicationUser> UserManager
@inject SignInManager<FinalDepi.Models.ApplicationUser> SignInManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Products" asp-action="Index">Products</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
            <i class="fas fa-shopping-cart"></i> Cart
        </a>
    </li>
    <li class="nav-item">
        <span class="nav-link text-dark">Hello @(user?.FirstName ?? "User")!</span>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul> 