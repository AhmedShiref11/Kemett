@model IEnumerable<FinalDepi.Models.Category>
@{
    ViewData["Title"] = "Manage Categories";
}
<h2>Manage Categories</h2>
<p>
    <a asp-action="AddCategory" class="btn btn-primary">Add New Category</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="EditCategory" asp-route-id="@category.CategoryId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="DeleteCategory" asp-route-id="@category.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 