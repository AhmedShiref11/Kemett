@using Microsoft.AspNetCore.Identity
@inject UserManager<FinalDepi.Models.ApplicationUser> UserManager
@{
    ViewData["Title"] = "Home Page";
    var selectedSort = Context.Request.Query["sortOrder"].ToString();
}

@if (User.IsInRole("Admin"))
{
    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card h-100 border-left-primary">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-users me-2"></i>Users</h5>
                            <p class="card-text">Manage user accounts and permissions</p>
                            <a asp-controller="Admin" asp-action="Users" class="btn btn-primary">Manage Users</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card h-100 border-left-success">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-shopping-cart me-2"></i>Orders</h5>
                            <p class="card-text">View and manage customer orders</p>
                            <a asp-controller="Admin" asp-action="Orders" class="btn btn-success">View Orders</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card h-100 border-left-info">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-box me-2"></i>Products</h5>
                            <p class="card-text">Manage product inventory and categories</p>
                            <a asp-controller="Admin" asp-action="Products" class="btn btn-info">Manage Products</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="text-center">
    <div class="hero-section py-5">
        <img src="~/Logo/logo.png" alt="Kemet Logo" class="img-fluid mb-4" style="max-height: 200px;" />
        <h1 class="display-4">Welcome to Kemet</h1>
        <p class="lead">Your one-stop shop for all your needs</p>
        <hr class="my-4">
        <p>Discover our wide range of products and enjoy a seamless shopping experience.</p>
        <a class="btn btn-primary btn-lg" asp-controller="Products" asp-action="Index" role="button">Shop Now</a>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-cart fa-3x mb-3 text-primary"></i>
                    <h3>Easy Shopping</h3>
                    <p>Browse through our extensive collection of products with ease.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-truck fa-3x mb-3 text-primary"></i>
                    <h3>Fast Delivery</h3>
                    <p>Get your orders delivered quickly and efficiently.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-headset fa-3x mb-3 text-primary"></i>
                    <h3>24/7 Support</h3>
                    <p>Our customer service team is always here to help you.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}
