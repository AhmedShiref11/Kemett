@{
    ViewData["Title"] = "Payment Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-times-circle text-danger" style="font-size: 4rem;"></i>
                    <h2 class="mt-3">Payment Failed</h2>
                    <p class="lead">We're sorry, but there was an error processing your payment.</p>
                    <p>Please try again or contact our support team if the problem persists.</p>
                    <div class="mt-4">
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-primary">Return to Cart</a>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 