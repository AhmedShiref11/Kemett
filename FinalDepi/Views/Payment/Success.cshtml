@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    <h2 class="mt-3">Payment Successful!</h2>
                    <p class="lead">Thank you for your purchase. Your order has been processed successfully.</p>
                    <p>You will receive an email confirmation shortly.</p>
                    <div class="mt-4">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 