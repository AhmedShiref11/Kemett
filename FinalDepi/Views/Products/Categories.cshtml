@model IEnumerable<FinalDepi.Models.Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <h2 class="mb-4">Product Categories</h2>
    
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var category in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text text-muted">@category.Products.Count products</p>
                        <a asp-action="Index" asp-route-categoryId="@category.CategoryId" class="btn btn-primary">View Products</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 